@model List<HopeHaven1.Models.Patient>
@{
    ViewBag.Title = "TherapistIndex";
}
@if (Model.Count > 0)
{
    <h2 class="text-center">Patients Registered</h2>
<div>
    <table class="table table-striped table-bordered" style="border-color:black;">
        <thead class="bg-dark text-light text-center">
            <tr>
                <th>S.No</th>
                <th>Patient Name</th>
                <th>Patient Age</th>
                <th>Patient Gender</th>
                <th>Patient PhoneNo</th>
                <th>Call</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (item, index) in Model.Select((item, index) => (item, index)))
            {
                <tr>
                    <td>@(index + 1)</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.PhoneNo</td>
                    <td>
                        <a href="#" class="btn btn-dark d-flex justify-content-center">Schedule Call</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
}
else
{
<h2 class="text-center">No Patients Registered</h2>
}